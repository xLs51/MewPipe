{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Log in</h3>
            </div>
            <div class="panel-body">
                <form id="login-form" name="login_form" action="{{ path("fos_user_security_check") }}" method="post">
                    <fieldset>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="input-group top10">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input class="form-control" placeholder="Username" id="username" name="_username" type="text" required>
                        </div>
                        <div class="input-group top10">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" id="password" name="_password" placeholder="Password" class="form-control" required>
                        </div>
                        <div class="input-group top10">
                            <input type="checkbox" name="remember_me" id="_remember_me" value="on"><label for="_remember_me">&nbsp;&nbsp;Remember me</label>
                        </div>
                        <button type="submit" id="_submit" name="_submit" class="btn btn-default">Connect !</button>
                        <a class="btn btn-danger" href="{{ url }}">or connect with Google !</a>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
